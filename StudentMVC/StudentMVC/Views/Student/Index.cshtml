@model StudentMVC.Models.StudentViewModel

@{
    ViewData["Title"] = "Student Marks Calculator";
}

<div class="container mt-4">
    <h2>Student Marks Entry</h2>

    <form asp-action="Index" method="post" class="mb-4">
        <div class="row">
            <div class="col-md-6 form-group">
                <label>Name:</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="col-md-6 form-group">
                <label>USN:</label>
                <input asp-for="USN" class="form-control" required />
            </div>
        </div>

        <h4 class="mt-3">Enter Marks (0-100)</h4>
        <div class="row">
            <div class="col-md-4 form-group"><label>Subject 1:</label><input asp-for="Subject1" type="number" class="form-control" /></div>
            <div class="col-md-4 form-group"><label>Subject 2:</label><input asp-for="Subject2" type="number" class="form-control" /></div>
            <div class="col-md-4 form-group"><label>Subject 3:</label><input asp-for="Subject3" type="number" class="form-control" /></div>
            <div class="col-md-4 form-group"><label>Subject 4:</label><input asp-for="Subject4" type="number" class="form-control" /></div>
            <div class="col-md-4 form-group"><label>Subject 5:</label><input asp-for="Subject5" type="number" class="form-control" /></div>
            <div class="col-md-4 form-group"><label>Subject 6:</label><input asp-for="Subject6" type="number" class="form-control" /></div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Calculate Result</button>
    </form>

    <hr />

    @if (Model != null)
    {
        <h3 class="text-success">Student Report Card</h3>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Detail</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr><td><strong>Student Name</strong></td><td>@Model.Name</td></tr>
                <tr><td><strong>USN</strong></td><td>@Model.USN</td></tr>
                <tr><td><strong>Subject 1</strong></td><td>@Model.Subject1</td></tr>
                <tr><td><strong>Subject 2</strong></td><td>@Model.Subject2</td></tr>
                <tr><td><strong>Subject 3</strong></td><td>@Model.Subject3</td></tr>
                <tr><td><strong>Subject 4</strong></td><td>@Model.Subject4</td></tr>
                <tr><td><strong>Subject 5</strong></td><td>@Model.Subject5</td></tr>
                <tr><td><strong>Subject 6</strong></td><td>@Model.Subject6</td></tr>
                <tr class="table-info">
                    <td><strong>Total Marks</strong></td>
                    <td><strong>@Model.TotalMarks / 600</strong></td>
                </tr>
                <tr class="table-success">
                    <td><strong>Average</strong></td>
                    <td><strong>@Model.Average.ToString("0.00") %</strong></td>
                </tr>
            </tbody>
        </table>
    }
</div>